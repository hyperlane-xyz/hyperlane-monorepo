send-message-b3-to-ape:
    export SENDER_CONTRACT_ADDRESS="0x5d68f3ee540cb7f05e24a7a889d84ad5be04a8e6" && \
    export DESTINATION_DOMAIN=33111 && \
    export RECIPIENT_CONTRACT_ADDRESS="0x3cc76e528af7584db50f1732e45a2d57c7d12cc9" && \
    export MESSAGE_CONTENT="Hello from B3 to Ape!" && \
    forge script script/SendMessage.s.sol:SendMessage \
        --rpc-url https://sepolia.b3.fun/http \
        --broadcast \
        -vvvv

