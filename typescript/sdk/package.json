{
  "name": "@hyperlane-xyz/sdk",
  "version": "23.0.0",
  "description": "The official SDK for the Hyperlane Network",
  "keywords": [
    "Hyperlane",
    "SDK",
    "Typescript"
  ],
  "homepage": "https://www.hyperlane.xyz",
  "license": "Apache-2.0",
  "repository": "https://github.com/hyperlane-xyz/hyperlane-monorepo",
  "files": [
    "/dist"
  ],
  "type": "module",
  "sideEffects": false,
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "check": "tsc --noEmit",
    "clean": "rm -rf ./dist ./cache",
    "lint": "eslint -c ./eslint.config.mjs",
    "prepublishOnly": "pnpm build",
    "format": "oxfmt --write ./src",
    "test": "pnpm test:unit && pnpm test:hardhat && pnpm test:foundry",
    "test:ci": "pnpm test",
    "test:unit": "mocha --config .mocharc.json './src/**/*.test.ts' --exit",
    "test:hardhat": "NODE_OPTIONS='--import tsx/esm' hardhat --config hardhat.config.cts test $(find ./src -name \"*.hardhat-test.ts\")",
    "test:foundry": "./scripts/foundry-test.sh"
  },
  "dependencies": {
    "@arbitrum/sdk": "catalog:",
    "@aws-sdk/client-s3": "catalog:",
    "@chain-registry/types": "catalog:",
    "@cosmjs/amino": "catalog:",
    "@cosmjs/cosmwasm-stargate": "catalog:",
    "@cosmjs/crypto": "catalog:",
    "@cosmjs/encoding": "catalog:",
    "@cosmjs/math": "catalog:",
    "@cosmjs/proto-signing": "catalog:",
    "@cosmjs/stargate": "catalog:",
    "@cosmjs/tendermint-rpc": "catalog:",
    "@hyperlane-xyz/aleo-sdk": "workspace:*",
    "@hyperlane-xyz/core": "workspace:*",
    "@hyperlane-xyz/cosmos-sdk": "workspace:*",
    "@hyperlane-xyz/deploy-sdk": "workspace:*",
    "@hyperlane-xyz/provider-sdk": "workspace:*",
    "@hyperlane-xyz/radix-sdk": "workspace:*",
    "@hyperlane-xyz/starknet-core": "workspace:*",
    "@hyperlane-xyz/utils": "workspace:*",
    "@safe-global/api-kit": "catalog:",
    "@safe-global/protocol-kit": "catalog:",
    "@safe-global/safe-core-sdk-types": "catalog:",
    "@safe-global/safe-deployments": "catalog:",
    "@solana/spl-token": "catalog:",
    "@solana/web3.js": "catalog:",
    "@starknet-react/chains": "catalog:",
    "@turnkey/api-key-stamper": "catalog:",
    "@turnkey/sdk-server": "catalog:",
    "@turnkey/solana": "catalog:",
    "bignumber.js": "catalog:",
    "borsh": "catalog:",
    "compare-versions": "^6.1.1",
    "cosmjs-types": "catalog:",
    "cross-fetch": "^3.1.5",
    "ethers": "catalog:",
    "pino": "catalog:",
    "starknet": "catalog:",
    "viem": "catalog:",
    "zksync-ethers": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ethersproject/providers": "*",
    "@hyperlane-xyz/eslint-config": "workspace:^",
    "@hyperlane-xyz/tsconfig": "workspace:^",
    "@nomiclabs/hardhat-ethers": "catalog:",
    "@nomiclabs/hardhat-waffle": "catalog:",
    "@types/chai-as-promised": "catalog:",
    "@types/mocha": "catalog:",
    "@types/node": "catalog:",
    "@types/sinon": "catalog:",
    "@types/sinon-chai": "catalog:",
    "@types/ws": "catalog:",
    "chai": "catalog:",
    "chai-as-promised": "catalog:",
    "dotenv": "catalog:",
