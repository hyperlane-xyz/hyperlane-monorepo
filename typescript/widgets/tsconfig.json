{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "react",
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "module": "ES2015"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.stories.tsx"],
}
