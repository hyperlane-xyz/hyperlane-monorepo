{
  "name": "@hyperlane-xyz/http-registry-server",
  "version": "22.0.0",
  "private": true,
  "description": "An HTTP server for the Hyperlane registry",
  "license": "Apache-2.0",
  "homepage": "https://www.hyperlane.xyz",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperlane-xyz/hyperlane-monorepo"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf ./dist",
    "start": "node dist/scripts/run-server.js",
    "start:dev": "NODE_ENV=development LOG_FORMAT=pretty node dist/scripts/run-server.js",
    "dev": "tsc --watch",
    "lint": "eslint -c ./eslint.config.mjs",
    "prettier": "prettier --write ./src ./test",
    "test": "pnpm test:unit",
    "test:ci": "pnpm test",
    "test:unit": "mocha --config .mocharc.json './test/**/*.ts' --exit"
  },
  "dependencies": {
    "@hyperlane-xyz/registry": "catalog:",
    "@hyperlane-xyz/sdk": "workspace:*",
    "@hyperlane-xyz/utils": "workspace:*",
    "express": "^5.1.0",
    "pino": "catalog:",
    "zod": "catalog:",
    "zod-validation-error": "catalog:"
  },
  "devDependencies": {
    "@hyperlane-xyz/tsconfig": "workspace:^",
    "@types/chai": "catalog:",
    "@types/chai-as-promised": "catalog:",
    "@types/express": "^5.0.3",
    "@types/mocha": "catalog:",
    "@types/node": "catalog:",
    "@types/sinon": "catalog:",
    "@types/supertest": "^2.0.12",
    "@types/yargs": "catalog:",
    "chai": "catalog:",
    "chai-as-promised": "catalog:",
    "eslint": "catalog:",
    "mocha": "catalog:",
    "pino-pretty": "catalog:",
    "prettier": "catalog:",
    "sinon": "catalog:",
    "supertest": "^6.3.3",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "yargs": "catalog:"
  }
}
