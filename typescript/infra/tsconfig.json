{
  "extends": "@hyperlane-xyz/tsconfig/tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "outDir": "./dist/",
    "rootDir": "./",
    "noUnusedLocals": false,
    "module": "nodenext",
    "moduleResolution": "nodenext"
  },
  "exclude": [
    "./node_modules/",
    "./dist/",
    "./tmp.ts",
    "./test/**/*",
    "./src/**/*.test.ts",
    "./scripts/**/*"
  ],
  "include": ["./config/**/*.ts", "./src/**/*.ts"]
}
