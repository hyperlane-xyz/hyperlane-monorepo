{
  "name": "@hyperlane-xyz/svm-provider",
  "version": "23.0.0",
  "description": "Hyperlane TypeScript SDK for Solana/SVM chains",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "homepage": "https://www.hyperlane.xyz",
  "repository": "https://github.com/hyperlane-xyz/hyperlane-monorepo",
  "keywords": [
    "hyperlane",
    "solana",
    "svm",
    "sealevel",
    "blockchain",
    "sdk"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "prebuild": "pnpm codama",
    "build": "pnpm prebuild && rm -rf ./dist && tsc",
    "format": "prettier --write .",
    "lint": "eslint -c ./eslint.config.mjs",
    "prettier": "prettier --write ./src",
    "clean": "rm -rf ./dist ./cache ./src/generated",
    "dev": "tsc --watch",
    "codama": "node codama-combined.mjs",
    "codama:clean": "rm -rf ./src/generated && pnpm codama",
    "codama:separate": "node codama-separate.mjs",
    "codama:separate:clean": "rm -rf ./src/generated && pnpm codama:separate",
    "test": "echo \"no tests in svm-provider\"",
    "test:ci": "echo \"no tests in svm-provider\""
  },
  "devDependencies": {
    "@codama/nodes-from-anchor": "^1.3.8",
    "@codama/renderers-js": "github:antigremlin/renderers-js#cursor/import-generation-enhancement-4673",
    "@eslint/js": "catalog:",
    "@hyperlane-xyz/eslint-config": "workspace:^",
    "@hyperlane-xyz/tsconfig": "workspace:^",
    "@types/chai": "catalog:",
    "@types/mocha": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "chai": "catalog:",
    "codama": "^1.5.0",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-import-resolver-typescript": "catalog:",
    "eslint-plugin-import": "catalog:",
    "mocha": "catalog:",
    "prettier": "catalog:",
    "ts-node": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "dependencies": {
    "@hyperlane-xyz/provider-sdk": "workspace:*",
    "@hyperlane-xyz/utils": "workspace:*",
    "@solana/kit": "^2.3.0",
    "@solana/spl-token": "catalog:",
    "@solana/web3.js": "catalog:"
  }
}
