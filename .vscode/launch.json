{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "SDK Hardhat Tests",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/.bin/hardhat",
      "args": "--config hardhat.config.cts test  $(find ./src -name \"*.hardhat-test.ts\")",
      "cwd": "${workspaceFolder}/typescript/sdk",
      "runtimeArgs": [
      ],
      "env": {
        "NODE_OPTIONS": "--experimental-loader ts-node/esm/transpile-only --no-warnings=ExperimentalWarning"
      },
      "console": "integratedTerminal"
    }
  ]
}