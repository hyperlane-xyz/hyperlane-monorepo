{
  "name": "Hyperlane Development",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/devcontainers/features/sshd:1": {}
  },
  "runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW"],
  "remoteUser": "node",
  "mounts": [
    "source=hyperlane-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=hyperlane-opencode-${devcontainerId},target=/home/node/.opencode,type=volume"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "OPENCODE_CONFIG_DIR": "/home/node/.opencode"
  },
  "workspaceFolder": "/hyperlane-monorepo",
  "postStartCommand": "sudo /usr/local/bin/init-firewall.sh && nohup opencode serve --port 4096 --hostname 0.0.0.0 > /tmp/opencode-server.log 2>&1 &",
  "waitFor": "postStartCommand"
}
