{
  "ui": "stream",
  "globalEnv": ["REGISTRY_URI"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "cache/**", "src/generated/**"]
    },
    "build:zk": {
      "dependsOn": ["build"],
      "outputs": ["dist/**", "artifacts-zk/**", "cache-zk/**"]
    },
    "build:tron": {
      "dependsOn": ["build"],
      "outputs": ["cache-tron/**", "../typescript/tron-sdk/src/abi/**"]
    },
    "@hyperlane-xyz/tron-sdk#build": {
      "dependsOn": ["@hyperlane-xyz/core#build:tron", "^build"],
      "outputs": ["dist/**", "src/abi/**"]
    },
    "test:ci": {
      "dependsOn": ["build", "^test:ci"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "clean": {
      "cache": false
    },
    "format": {},
    "lint": {},
    "version:update": {
      "cache": false
    },
    "coverage": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**", "fixtures/**"]
    },
    "bundle": {
      "dependsOn": ["build"],
      "outputs": ["bundle/**"]
    }
  }
}
